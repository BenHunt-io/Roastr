<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="CustomTextStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ffffff</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="savedPageTextStyle" parent="">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="buttonTextStyle">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="switchStyle">
        <!-- Customize your theme here. -->
        <item name="android:color">#6E0E0E</item>
    </style>

    <style name="aboutMeTextStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ffffff</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="saveGenerateTextStyle" parent="">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#0D0D0D</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="submitTextStyle" parent="">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#0D0D0D</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- consists of overriding the value for colorControlActivated, colorControlHighlight and
    colorControlNormal in your app theme definition and not your edittext style. Then, think to
     use this theme for whatever activity you desire. Below is an example: -->
    <style name="Theme.App.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#000000</item>
        <item name="colorControlActivated">#6E0E0E</item>
        <item name="colorControlHighlight">#000000</item>
    </style>

</resources>
